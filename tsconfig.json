{
  "compilerOptions": {
    "jsx": "react-jsx",
    "module": "ESNext", 
    "target": "ESNext",
    "moduleResolution": "Node",
    "isolatedModules": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "allowJs": true,
    "strict": true,
    "skipLibCheck": true,
    "noEmit": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
      "supabase/*": ["./supabase/*"],
      "@app/*": ["./app/*"],
      "@admin/*": ["./admin/*"],
      "@landing/*": ["./landing/*"]
    },
    "types": ["vite/client"]
  },
  "include": [
    "src/**/*",
    "app/**/*", 
    "admin/**/*",
    "landing/**/*",
    "supabase/**/*",
    "vite.config.js"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}